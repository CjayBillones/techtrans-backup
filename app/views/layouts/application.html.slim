doctype html
html
  head
    href="//netdna.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/css/bootstrap.min.css" rel="stylesheet"
    title
      = full_title(yield(:title))
    = render 'layouts/rails_default'
    = render 'layouts/shim'
    = favicon_link_tag 'favicon.ico'
  body
    = render 'layouts/navbar'
    .container
      = render 'shared/flash'
      = yield
      = render 'layouts/footer'
      = debug(params) if Rails.env.development?
